datasource postgresql {
  url      = env("DATABASE_URL")
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
  output   = "node_modules/.prisma/client"
}

model Product {
  id                String         @id @default(cuid())
  name              String         @default("")
  description       String         @default("")
  price             Int
  photo             ProductImage[] @relation("Product_photo")
  select            String?        @default("published")
  collections       String?        @default("new")
  publishDate       DateTime?
  author            User?          @relation("Product_author", fields: [authorId], references: [id])
  authorId          String?        @map("author")
  from_Cart_product Cart[]         @relation("Cart_product")

  @@index([authorId])
}

model ProductImage {
  id                   String      @id @default(cuid())
  image                Json?
  altText              String      @default("")
  product              Product[]   @relation("Product_photo")
  from_OrderItem_photo OrderItem[] @relation("OrderItem_photo")
}

model User {
  id                      String    @id @default(cuid())
  name                    String    @default("")
  email                   String    @unique @default("")
  password                String
  products                Product[] @relation("Product_author")
  order                   Order[]   @relation("Order_user")
  cart                    Cart[]    @relation("Cart_user")
  role                    Role?     @relation("User_role", fields: [roleId], references: [id])
  roleId                  String?   @map("role")
  passwordResetToken      String?
  passwordResetIssuedAt   DateTime?
  passwordResetRedeemedAt DateTime?

  @@index([roleId])
}

model Order {
  id     String      @id @default(cuid())
  total  Int?
  user   User?       @relation("Order_user", fields: [userId], references: [id])
  userId String?     @map("user")
  items  OrderItem[] @relation("Order_items")
  charge String      @default("")

  @@index([userId])
}

model OrderItem {
  id       String         @id @default(cuid())
  order    Order[]        @relation("Order_items")
  photo    ProductImage[] @relation("OrderItem_photo")
  quantity Int
  price    Int?
  name     String         @default("")
}

model Cart {
  id       String    @id @default(cuid())
  user     User[]    @relation("Cart_user")
  product  Product[] @relation("Cart_product")
  quantity Int
}

model Role {
  id                String    @id @default(cuid())
  name              String    @default("")
  assignedTo        User[]    @relation("User_role")
  createdAt         DateTime?
  updatedAt         DateTime? @updatedAt
  isAdmin           Boolean   @default(false)
  canManageProducts Boolean   @default(false)
  canManageOrders   Boolean   @default(false)
  canManageUsers    Boolean   @default(false)
  canManageCarts    Boolean   @default(false)
  canManageImages   Boolean   @default(false)
  canManageRoles    Boolean   @default(false)
  canSeeOthersUsers Boolean   @default(false)
}